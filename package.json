      "is-empty": "^1.2.0",
      "jsonwebtoken": "^8.3.0",
      "mongoose": "^5.3.11",
      "nodemon": "^1.19.3",
      "passport": "^0.4.0",
      "passport-jwt": "^4.0.0",
      "react": "^16.10.2",
      "react-dom": "^16.6.3",
      "validator": "^10.9.0"
   }
